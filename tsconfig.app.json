{
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "src/**/*.d.ts",
    "src/**/*.vue.js",
    "src/**/*.vue.d.ts",
    "node_modules/**/*",
    "src/views/auth/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist/js",
    "rootDir": "."
  }
}